{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "element-plus/global"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "pages": [
        "./src/pages"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "stores/*": [
        "./src/stores/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "common/*": [
        "./src/common/*"
      ],
      "constants/*": [
        "./src/constants/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "extends": [
    "@vue/tsconfig/tsconfig.json"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}